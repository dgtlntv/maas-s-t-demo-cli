{
    "$schema": "./commands-schema.json",
    "welcome": "ðŸ‘‹ Welcome to Project Builder CLI - Type 'project --help' for usage",
    "variables": {},
    "commands": {
        "create": {
            "description": "Create a new project with customizable settings",
            "alias": "c",
            "example": ["create --type web", "Create a new web project"],
            "options": {
                "type": {
                    "description": "Project type to create",
                    "alias": "t",
                    "type": "string",
                    "choices": ["web", "api", "mobile"],
                    "default": "web"
                },
                "name": {
                    "description": "Project name",
                    "alias": "n",
                    "type": "string",
                    "default": "my-project"
                }
            },
            "handler": [
                {
                    "component": "spinner",
                    "output": "Initializing project...",
                    "duration": 1500,
                    "conclusion": "succeed"
                },
                {
                    "component": "select",
                    "name": "framework",
                    "message": "Select a framework:",
                    "choices": ["React", "Vue", "Angular"]
                },
                {
                    "component": "progressBar",
                    "output": "Creating {{type}} project with {{framework}}...",
                    "duration": 2000
                },
                {
                    "component": "text",
                    "output": "âœ… Project '{{name}}' created successfully with {{framework}}!"
                }
            ]
        }
    }
}
